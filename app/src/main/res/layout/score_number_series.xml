<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/purple_ghost"
    android:orientation="vertical"
    tools:context="com.khutso.quizapp11.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Number series \n final score"
        android:textColor="#fff"
        android:textSize="30sp" />



    <TextView
        android:id="@+id/diA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" -"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home"
        android:textColor="#fff"
        android:background="@drawable/borderssss"
        android:text="select another category"

        android:layout_above="@+id/numberSeriesQ1_incorrect2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@id/numberSeriesQ1_incorrect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/borderssss"
        android:onClick="retryAgainNumberSeries"
        android:text="try again"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--Ask Master when trying to remove this button gives the app crush bomb-->
    <Button
        android:id="@+id/showAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="show answer" />



</RelativeLayout>




